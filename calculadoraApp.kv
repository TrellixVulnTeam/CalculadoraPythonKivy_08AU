<Personalizando@Button>:
	font_size: 32

<LayoutCalculadora>:
	id: calculadora
	display: entry
	rows: 5
	padding: 10
	spacing: 10
	
	BoxLayout:
		TextInput:
			id: entry
			font_size: 32
			multiline: False

	BoxLayout:
		spacing: 10
		Personalizando:
			text: '7'
			on_press: entry.text += self.text
		Personalizando:
			text: '8'
			on_press: entry.text += self.text
		Personalizando:
			text: '9'
			on_press: entry.text += self.text
		Personalizando:
			text: '-'
			on_press: entry.text += self.text
			
	BoxLayout:
		spacing: 10
		Personalizando:
			text: '4'
			on_press: entry.text += self.text
		Personalizando:
			text: '5'
			on_press: entry.text += self.text
		Personalizando:
			text: '6'
			on_press: entry.text += self.text
		Personalizando:
			text: '+'
			on_press: entry.text += self.text
			
	BoxLayout:
		spacing: 10
		Personalizando:
			text: '1'
			on_press: entry.text += self.text
		Personalizando:
			text: '2'
			on_press: entry.text += self.text
		Personalizando:
			text: '3'
			on_press: entry.text += self.text
		Personalizando:
			text: '*'
			on_press: entry.text += self.text
			
	BoxLayout:
		spacing: 10
		Personalizando:
			text: 'AC'
			on_press: entry.text = ''
		Personalizando:
			text: '0'
			on_press: entry.text += self.text
		Personalizando:
			text: '='
			on_press: calculadora.resultado(entry.text)
		Personalizando:
			text: '/'
			on_press: entry.text += self.text